---
// src/pages/blog/index.astro
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("blog");
---

<Layout title="All Blog Posts">
  <section class="max-w-3xl mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-6">ðŸ§  All Blog Posts</h1>
    <ul class="space-y-6">
      {posts.map(post => (
        <li>
          <a href={`/blog/${post.slug}/`} class="text-2xl text-blue-400 hover:underline">
            {post.data.title}
          </a>
          <p class="text-sm text-gray-400">{new Date(post.data.date).toLocaleDateString()}</p>
          <p class="text-gray-300">{post.data.description}</p>
        </li>
      ))}
    </ul>
  </section>
</Layout>
