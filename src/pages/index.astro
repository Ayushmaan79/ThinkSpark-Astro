---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("blog");
---

<Layout title="Home | ThinkSpark">
  <h1 class="text-3xl font-bold mb-4 text-primary">Latest Posts</h1>

  {posts.map(post => (
    <a href={`/blog/${post.slug}`} class="block p-4 mb-4 bg-gray-800 rounded hover:bg-gray-700 transition">
      <h2 class="text-xl font-semibold mb-1">{post.data.title}</h2>
      <p class="text-sm text-gray-400">{new Date(post.data.date).toLocaleDateString()}</p>
    </a>
  ))}
</Layout>
